<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
     >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:textColor="#ff4500"
        android:text="￥" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="21dp"
        android:text="账户余额支付" />

    <EditText
        android:id="@+id/ed_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="26dp"
        android:drawableLeft="@drawable/login_password"
        android:ems="10"
        android:hint="请输入支付密码进行验证"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_dangqianyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_quxiao"
        android:layout_toRightOf="@+id/textView3"
         />

    <TextView
        android:id="@+id/tv_quxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_style"
        android:text="取消" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tv_quxiao"
        android:layout_marginTop="18dp" >
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_yanzheng"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/ed_mima"
        android:layout_alignBottom="@+id/ed_mima"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:text="验证" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ed_mima"
        android:layout_below="@+id/ed_mima"
        android:text="当前余额：" />




    <TextView
        android:id="@+id/tv_wangjimima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ed_mima"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:text="忘记密码？"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_quxiao"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/tv_wangjimima"
        android:text="需支付：" />

    <TextView
        android:id="@+id/tv_queren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_quxiao"
        android:layout_alignBottom="@+id/tv_quxiao"
        android:layout_alignLeft="@+id/textView4"
        android:background="@drawable/button_style"
        android:text="确认" />

    <TextView
        android:id="@+id/tv_xuzhifu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:textColor="#ff4500"
        android:layout_toRightOf="@+id/textView4"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff4500"
        android:layout_below="@+id/tv_yanzheng"
        android:layout_toLeftOf="@+id/tv_xuzhifu"
        android:text="￥" />

</RelativeLayout>