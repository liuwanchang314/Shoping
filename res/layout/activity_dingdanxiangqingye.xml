<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <!-- 头部界面 -->

    <LinearLayout
        android:id="@+id/paymney_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="#a9a9a9" >

            <ImageView
                android:id="@+id/dingdanxiangqing_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="订单详情" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/dingdanxiangqing_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e4e4e4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/peisongdizhi" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:id="@+id/ddxq_kuaidixingxi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/ddxq_shuoming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="24dp"
                        />

                    <TextView
                        android:id="@+id/ddxq_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ddxq_shuoming"
                        android:layout_alignParentBottom="true"
                         />
                </RelativeLayout>
            </LinearLayout>

            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#e4e4e4" />
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/address" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:text="收货人：" />

                    <TextView
                        android:id="@+id/ddxq_shouhuorenname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView2"
                        android:layout_toRightOf="@+id/textView2"
                        />

                    <TextView
                        android:id="@+id/ddxq_shouhuorendianhua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/ddxq_shouhuorenname"
                        android:layout_alignBottom="@+id/ddxq_shouhuorenname"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                         />

                    <TextView
                        android:id="@+id/ddxq_shouhuodizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView2"
                        android:layout_below="@+id/textView2"
                        />
                </RelativeLayout>
            </LinearLayout>
			<View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#e4e4e4" />
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.customview.Mylistview
                    android:id="@+id/ddxq_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </com.customview.Mylistview>
            </LinearLayout>

            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#e4e4e4" />
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="订单编号:" />

                    <TextView
                        android:id="@+id/ddxq_dingdanbianhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView4"
                        android:layout_alignBottom="@+id/textView4"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textView4"
                        android:text="订单编号:" />
                </RelativeLayout>
                <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/ddxq_chuangjianshijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textView5"
                        android:text="创建时间:" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/ddxq_chuangjianshijian"
                        android:layout_alignBottom="@+id/ddxq_chuangjianshijian"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="创建时间:" />
                </RelativeLayout>
<View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/ddxq_fukuanshijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textView6"
                        android:text="付款时间" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ddxq_fukuanshijian"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="付款时间:" />
                </RelativeLayout>
<View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/ddxq_fahuoshijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textView7"
                        android:text="发货时间" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/ddxq_fahuoshijian"
                        android:layout_alignBottom="@+id/ddxq_fahuoshijian"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="发货时间:" />
                </RelativeLayout>
<View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/ddxq_chengjiaoshijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textView8"
                        android:text="成交时间" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/ddxq_chengjiaoshijian"
                        android:layout_alignBottom="@+id/ddxq_chengjiaoshijian"
                        android:layout_marginLeft="10dp"
                        android:text="成交时间:" />
                </RelativeLayout>
            </LinearLayout>
<View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#e4e4e4" />
<View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:id="@+id/ddxq_chakanwuliu"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/biankuang"
                    android:gravity="center"
                    android:text="查看物流" />

                <TextView
                    android:id="@+id/ddxq_pingjia"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/biankuang"
                    android:gravity="center"
                    android:text="评价" />
            </RelativeLayout>
<View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#E4E4E4" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>