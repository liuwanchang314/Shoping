<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        >
        <RelativeLayout 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#A9A9A9"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/rechrageactivity_imageView_callback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

        </RelativeLayout>
        <RelativeLayout 
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:text="预存款充值" />

        </RelativeLayout>
        <RelativeLayout 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/rechrageactivity_imageView_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:text="请输入要充值的金额" />

        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
			<RelativeLayout 
			    android:layout_weight="1"
			    android:layout_height="match_parent"
			    android:layout_width="0dp"
			    
			    >

			    <EditText
			        android:id="@+id/rechrageactivity_edittext_jine"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="20dp"
			        android:layout_alignParentBottom="true"
			        android:gravity="center"
			        android:background="@drawable/jinekuang" >

            </EditText>
			</RelativeLayout>
			<RelativeLayout 
			    android:layout_weight="1"
			    android:layout_height="match_parent"
			    android:layout_width="0dp"
			    
			    >

				<TextView
				    android:id="@+id/textView3"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:textColor="#ff4500"
				    android:text="(当前预存款为：" />

				<TextView
				    android:id="@+id/rechrageactivity_current_jine"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerVertical="true"
				    android:layout_toRightOf="@+id/textView3"
				    android:text="xxx" />

				<TextView
				    android:id="@+id/textView5"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignBaseline="@+id/textView3"
				    android:layout_alignBottom="@+id/textView3"
				    android:layout_alignParentRight="true"
				    android:textColor="#ff4500"
				    android:layout_toRightOf="@+id/rechrageactivity_current_jine"
				    android:text="元)" />

			</RelativeLayout>
            

        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A9A9A9"
            android:layout_marginTop="10dp"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="实际应付：" />

            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                >

                <TextView
                    android:id="@+id/rechrageactivity_textview_jine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#aa00aa"
                    android:text="000" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/rechrageactivity_textview_jine"
                    android:layout_alignBottom="@+id/rechrageactivity_textview_jine"
                    android:layout_alignParentRight="true"
                    android:text="元" />

            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >

                <TextView
                    android:id="@+id/rechrageactivity_textview_payclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="(你选择了支付宝支付）" />

            </RelativeLayout>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A9A9A9"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:text="请选择付款方式" />

        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#a9a9a9"
            />
        <!-- 当按钮被选中的时候，需要一个边框效果，所以，这里需要这么做
        当按钮被点击的时候，动态的将它所在的布局的背景色设置上就行了，然后在点击确认充值的时候，将界面颜色置换回来
         -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <RelativeLayout 
                android:id="@+id/rechrageactivity_bg_zhifubao"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/rechrageactivity_imageview_zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#ffffff"
                    android:src="@drawable/zhifubao" />
                
            </RelativeLayout>
             <RelativeLayout
                 android:id="@+id/rechrageactivity_bg_caifutong" 
                android:layout_weight="0.21"
                android:layout_width="0dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_height="match_parent"
                >
 				<View 
                 android:layout_width="2dp"
                 android:layout_height="match_parent"
                 android:background="#a9a9a9"
                 android:layout_centerHorizontal="true"
                 />

             </RelativeLayout>
              <RelativeLayout 
                  android:id="@+id/rechrageactivity_bg_weixin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_height="match_parent"
                >

                  <ImageView
                      android:id="@+id/rechrageactivity_imageview_weixin"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:background="#ffffff"
                      android:layout_centerVertical="true"
                      android:src="@drawable/weixinzhifu" />

              </RelativeLayout>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#a9a9a9"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            ></LinearLayout>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#ffffff"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/rechrageactivity_textview_querenzhifu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="15dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:gravity="center"
            
            android:background="@drawable/button_style"
            android:text="确认充值" />

    </RelativeLayout>
    

</LinearLayout>