<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e4e4e4"
            >

            <ImageView
                android:id="@+id/payfor_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

        </RelativeLayout>
         <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            >

             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"
                 android:textSize="20sp"
                 android:textStyle="bold"
                 android:text="支付提交" />

         </RelativeLayout>
          <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

              <ImageView
                  android:id="@+id/payfor_home"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:src="@drawable/home" />

          </RelativeLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e4e4e4"
        />
    <RelativeLayout 
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="请您及时付款，以便订单尽快处理！" />

    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e4e4e4"
        />
    <RelativeLayout 
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="在线支付金额：" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:textColor="#ff4500"
            android:text="￥" />

        <TextView
            android:id="@+id/payfor_moneynum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:textColor="#ff4500"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="订单号：" />

            <TextView
                android:id="@+id/payfor_dingdanhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:text="TextView" />
        </RelativeLayout>

    </RelativeLayout>
     <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e4e4e4"
        />
     <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e4e4e4"
        />
    <RelativeLayout 
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="配送方式：" />

        <TextView
            android:id="@+id/payfor_peisongfangshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:text="TextView" />

    </RelativeLayout>
     <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e4e4e4"
        />
    <RelativeLayout 
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="请选择付款方式" />

    </RelativeLayout>
            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <RelativeLayout 
                android:id="@+id/payfor_zhifubao_bg_zhifubao"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
	                android:layout_marginTop="3dp"
	                android:layout_marginRight="3dp"
	                android:layout_marginBottom="3dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/payfor_zhifubao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                     android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                    android:layout_centerVertical="true"
                    android:background="#ffffff"
                    android:src="@drawable/zhifubao" />
                
            </RelativeLayout>
           
              <RelativeLayout 
                  android:id="@+id/payfor_weixin_bg_weixin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="3dp"
	                android:layout_marginTop="3dp"
	                android:layout_marginRight="3dp"
	                android:layout_marginBottom="3dp"
                android:layout_height="match_parent"
                >

                  <ImageView
                      android:id="@+id/payfor_weixin"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_centerHorizontal="true"
                       android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                      android:background="#ffffff"
                      android:layout_centerVertical="true"
                      android:src="@drawable/weixinzhifu" />

              </RelativeLayout>
                <RelativeLayout
                 android:id="@+id/payfor_caifutong_bg_caifutong" 
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="3dp"
	                android:layout_marginTop="3dp"
	                android:layout_marginRight="3dp"
	                android:layout_marginBottom="3dp"
                android:layout_height="match_parent"
                >

                 <ImageView
                     android:id="@+id/payfor_caifutong"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_centerHorizontal="true"
                     android:background="#ffffff"
                      android:layout_marginLeft="3dp"
	                android:layout_marginTop="3dp"
	                android:layout_marginRight="3dp"
	                android:layout_marginBottom="3dp"
                     android:layout_centerVertical="true"
                     android:src="@drawable/yucunkuan" />

             </RelativeLayout>
        </LinearLayout>
    <RelativeLayout 
        android:layout_weight="1.8"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        ></RelativeLayout>
     <View 
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#e4e4e4"
        />
    <RelativeLayout 
        android:layout_height="50dp"
        android:layout_width="match_parent"
        >

        <TextView
            android:id="@+id/payfor_querentijiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/button_style1"
            android:text="确认支付" />
              
    </RelativeLayout>

</LinearLayout>