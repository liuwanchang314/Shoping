<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFCC"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <include layout="@layout/dynamicdetailsactivity_top"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#ffffff"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            >

            <TextView
                android:id="@+id/dynamicdetais_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:text="2015新品无线缝纫夏被" />

            <TextView
                android:id="@+id/dynamicdetais_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dynamicdetais_tv_title"
                android:layout_centerHorizontal="true"
                android:text="2015.8.9" />

        </RelativeLayout> 
            <TextView 
                android:id="@+id/dynamicdetais_tv_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
