<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical" >
    
    
    <LinearLayout 
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <RelativeLayout 
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="#a9a9a9"
            >

            <ImageView
                android:id="@+id/persondata_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

        </RelativeLayout>
        <RelativeLayout 
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="#393939"
                android:textStyle="bold"
                android:text="个人资料" />

        </RelativeLayout>
        <RelativeLayout 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/persondata_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home" />

        </RelativeLayout>
    </LinearLayout>
     <RelativeLayout 
         android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="2"
        >

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="20dp"
            android:textColor="#393939"
             android:textSize="18dp"
             android:textStyle="bold"
             android:text="头像" />

         <com.Extension.RoundImageView
             android:id="@+id/persondata_touxiang"
             android:layout_width="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="5dp"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="40dp"
             android:src="@drawable/logo" >
          </com.Extension.RoundImageView>

         <ImageView
             android:id="@+id/imageView3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/textView2"
             android:layout_alignParentRight="true"
             android:src="@drawable/left" />

     </RelativeLayout>
       <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        
        >
           <RelativeLayout 
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               >

               <TextView
                   android:id="@+id/textView3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:textColor="#393939"
                    android:textSize="15dp"
                    android:textStyle="bold"
                   android:text="验证手机号" />

           </RelativeLayout>
            <RelativeLayout 
               android:layout_weight="1.6"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               >

                <TextView
                    android:id="@+id/persondata_shoujihao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="13345454545" />
                
            </RelativeLayout>
       </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
            <RelativeLayout 
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               >

               <TextView
                   android:id="@+id/textView4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:textColor="#393939"
                    android:textSize="15dp"
                    android:textStyle="bold"
                   android:layout_centerVertical="true"
                   android:text="电子邮箱" />

           </RelativeLayout>
            <RelativeLayout 
               android:layout_weight="1.6"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               >

                <TextView
                    android:id="@+id/persondata_dianziyouxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="13345454545@qq.com" />
                
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout 
        android:id="@+id/persondata_anquanxinxi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
            <RelativeLayout 
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               >

               <TextView
                   android:id="@+id/textView5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:textColor="#393939"
                    android:textSize="15sp"
                    android:textStyle="bold"
                   android:layout_centerVertical="true"
                   android:text="安全信息" />

           </RelativeLayout>
            <RelativeLayout 
               android:layout_weight="1.6"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               >

                <TextView
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="修改登录密码，密保问题..." />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/left" />
                
            </RelativeLayout>
        </LinearLayout>
         <LinearLayout 
             android:id="@+id/persondata_zhifumima"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
             
             <RelativeLayout 
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               >

               <TextView
                   android:id="@+id/textView6"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:textColor="#393939"
                    android:textSize="15sp"
                    android:textStyle="bold"
                   android:text="支付密码" />

           </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="支付密码找回" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/left" />

            </RelativeLayout>

         </LinearLayout>
          <LinearLayout
              android:id="@+id/persondata_mingpian" 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		         android:background="#ffffff"
        		android:layout_marginTop="5dp"
		        android:orientation="horizontal"
        >
              <RelativeLayout 
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               >

               <TextView
                   android:id="@+id/textView10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:textColor="#393939"
                    android:textSize="15sp"
                    android:textStyle="bold"
                   android:layout_centerVertical="true"
                   android:text="我的二维码名片" />

           </RelativeLayout>
            <RelativeLayout 
               android:layout_weight="1.6"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="39dp"
                    android:src="@drawable/two_code" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/left" />

            </RelativeLayout>
          </LinearLayout>
           <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
         android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        ></LinearLayout>
    

</LinearLayout>